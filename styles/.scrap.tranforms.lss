	#note {
		text-align: center;
		width: 640px;
		margin: 0px auto;
	}


	#new-item-wheel {
		text-align: left;
		.button-text {
			fill-opacity:1;
			stroke-opacity: 0;
			stroke-width: 1px;
			stroke: #000000;
			fill: #fff;
			font-size: 3em;
			text-align: center;

		}

		.wheel-item:hover,
		.wheel-item.hover {
			fill: #999;
			stroke: #333;
			stroke-opacity: 0;
			-webkit-transform: matrix(1.1,0,0, 1.1,1,1);
			-webkit-transform-origin-x: 140px;
			-webkit-transform-origin-y: 140px;
		}
		.wheel-item {
			fill: #888;
			-webkit-transform: matrix(1,0,0, 1,0,0);
		}
		.wheel-item-alias {
			fill: #000;
			fill-opacity: 0;
			stroke: #000;	
			stroke-opacity: 0;
		}
		.wheel-item-alias:hover,
		.wheel-item-alias.hover {

		}

		#new-0.wheel-item:hover,
		#new-0.wheel-item.hover {
			-webkit-transform: matrix(1.1, 0, 0, 1.1, -18, -12);
		}
		#new-1.wheel-item:hover,
		#new-1.wheel-item.hover {
			-webkit-transform: matrix(1.1, 0, 0, 1.1, -21, -13);
		}
		#new-2.wheel-item:hover,
