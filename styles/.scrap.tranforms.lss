			-webkit-transform: matrix(1.1, 0, 0, 1.1, -20, -15);
		}



		#center-button {
			fill: #eaeaea;
			stroke: #000000;
			stroke-width: 5px;
			stroke-linecap: butt;
			stroke-linejoin: miter;
			stroke-opacity: .5;

			.middle-button-text {
				fill: #333;
			}
		}
		#center-button:hover {
			fill: #dfdfdf;
			-webkit-filter: drop-shadow(16px 16px 10px black);
		}



// EDGES
